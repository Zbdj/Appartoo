<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <meta http-equiv="X-UA-Compatible" content="ie=edge">
    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.2.1/css/bootstrap.min.css" integrity="sha384-GJzZqFGwb1QTTN6wy59ffF1BuGJpLSa9DkKMp0DgiMDm4iYMj70gZWKYbI706tWS"
        crossorigin="anonymous">
    <title>Modifier ses informations</title>
</head>

<body>
    <nav class="navbar navbar-light bg-light">
        <a class="navbar-brand" href="/home">Appartoo</a>
        <a class="navbar-brand" href="/show/<%= logs %>">Mes informations</a>
        <a class="navbar-brand" href="/friends/<%= logs %>">Mes amis</a>

        <form action="/logout" action="GET">
            <button class="btn btn-danger">Se déconnecter</button>
        </form>
    </nav>

    <div class="container">

        <%if(logs === null ){ %>
        <script>
            window.location.href = "/login";
        </script>
        <%} %>

        <% alls.forEach(function(all){%>
        <h4>Votre profil</h4>
        <table class="table">
            <thead class="thead-dark">
                <tr>
                    <td>
                        <p>Pseudo :</p>
                        <%=all.pseudo%><br>
                    <td>
                        <p>Age :</p>
                        <%=all.age%><br>
                    <td>
                        <p>Famille :</p>
                        <%=all.famille%><br>
                    <td>
                        <p>Race :</p>
                        <%=all.race%><br>
                    <td>
                        <p>Nourriture :</p>
                        <%=all.nourriture%><br>
                </tr>
            </thead>
        </table>
        <form action="/delete/<%=all._id%>" method="GET">
            <div class="form-group">
                <button type="submit" class="btn btn-danger">Supprimer mon compte</button>
            </div>
        </form>
        <%})%>


        <% alls.forEach(function(all){%>
        <form action="/update/<%= all._id %>" method="POST">
            <%})%>
            <div class="form-group">
                <input type="text" name="username" placeholder="Modifier le pseudo" class="form-control">
            </div>
            <div class="form-group">
                <input type="number" name="age" placeholder="Modifier l'âge" class="form-control">
            </div>
            <div class="form-group">
                <input type="text" name="famille" placeholder="Modifier le nom de famille" class="form-control">
            </div>
            <div class="form-group">
                <input type="text" name="race" placeholder="Modifier la race" class="form-control">
            </div>
            <div class="form-group">
                <input type="text" name="nourriture" placeholder="Modifier la nourriture" class="form-control">
            </div>
            <div class="form-group">
                <button type="submit" class="btn btn-warning">Modifier le profil</button>
            </div>
            <a href="/home">Retour à l'accueil</a>
        </form>
    </div>

    </div>
</body>

</html>