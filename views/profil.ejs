<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <meta http-equiv="X-UA-Compatible" content="ie=edge">
    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.2.1/css/bootstrap.min.css" integrity="sha384-GJzZqFGwb1QTTN6wy59ffF1BuGJpLSa9DkKMp0DgiMDm4iYMj70gZWKYbI706tWS"
        crossorigin="anonymous">
    <title>Profil</title>
</head>

<body>
    <nav class="navbar navbar-light bg-light">
        <a class="navbar-brand" href="/home">Appartoo</a>
    </nav>

    <div class="container">
        <% alls.forEach(function(all){%>

        <table class="table">
            <thead class="thead-dark">
                <tr>
                    <td>
                        <p>Pseudo :</p>
                        <%=all.pseudo%><br>
                    <td>
                        <p>Age :</p>
                        <%=all.age%><br>
                    <td>
                        <p>Famille :</p>
                        <%=all.famille%><br>
                    <td>
                        <p>Race :</p>
                        <%=all.race%><br>
                    <td>
                        <p>Nourriture :</p>
                        <%=all.nourriture%><br>
                </tr>
            </thead>
        </table>
        <form action="/delete/<%=all.pseudo %>" method="GET">
            <div class="form-group">
                <button type="submit" class="btn btn-danger">Supprimer ce Marsupilami</button>
            </div>
        </form>
        <%})%>


        <% alls.forEach(function(all){%>
        <form action="/update/<%= all.pseudo %>" method="POST">
            <%})%>
            <div class="form-group">
                <input type="text" name="username" placeholder="Modifier le pseudo" class="form-control">
            </div>
            <div class="form-group">
                <input type="text" name="age" placeholder="Modifier l'age'" class="form-control">
            </div>
            <div class="form-group">
                <input type="text" name="famille" placeholder="Modifier le nom de famille" class="form-control">
            </div>
            <div class="form-group">
                <input type="text" name="race" placeholder="Modifier la race" class="form-control">
            </div>
            <div class="form-group">
                <input type="text" name="nourriture" placeholder="Modifier la nourriture" class="form-control">
            </div>
            <div class="form-group">
                <button type="submit" class="btn btn-warning">Modifier les informations</button>
            </div>
            <a href="/home">Retour a l'accueil</a>
        </form>
    </div>

    </div>
</body>

</html>